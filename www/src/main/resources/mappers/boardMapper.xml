<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.booktopia.www.repository.BoardMapper">
    <insert id="insert">
        insert into board (id,b_title,b_writer, b_content,b_cate)
        values ("3503320191", #{bTitle},"김정온",#{bContent},"전체")
    </insert>

    <select id="getList" resultType="com.booktopia.www.domain.BoardVO">
        select * from board
    </select>

    <select id="getTotalCount" resultType="int">
        select count(bno) from board
    </select>

</mapper>