<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.booktopia.www.repository.BoardMapper">
    <insert id="insert">
        insert into board (id,b_title,b_writer, b_content,b_cate,b_mainImg)
        values (#{id}, #{bTitle},#{bWriter},#{bContent},#{bCate},#{bMainImg})
    </insert>

    <select id="getList" resultType="com.booktopia.www.domain.BoardVO">
        select * from board
        <include refid="search"></include>
        order by bno desc
        limit #{pageStart},10
    </select>

    <select id="getTotalCount" resultType="int">
        select count(bno) from board
        <include refid="search"></include>
    </select>

    <select id="getDetail" resultType="com.booktopia.www.domain.BoardVO">
        select * from board where bno=#{bno}
    </select>

    <update id="modify">
        update board set b_title=#{bTitle}, b_content=#{bContent}, b_cate=#{bCate}, b_mainImg=#{bMainImg}
        where bno=#{bno}
    </update>

    <delete id="delete">
        delete from board where bno=#{bno}
    </delete>

    <sql id="search">
        <if test="type!=null">
            <trim prefix="where (" suffix=")" suffixOverrides="or">
                <foreach collection="typeToArray" item="type">
                    <trim suffix="or">
                        <choose>
                            <when test="type=='w'.toString()">
                                b_writer like concat('%',#{keyword},'%')
                            </when>
                            <when test="type=='t'.toString()">
                                b_title like concat('%',#{keyword},'%')
                            </when>
                            <when test="type=='c'.toString()">
                                b_content like concat('%',#{keyword},'%')
                            </when>
                        </choose>
                    </trim>
                </foreach>
            </trim>
        </if>
    </sql>
</mapper>